@model IEnumerable<duanwebsite.Data.HangHoa>
@{
    ViewData["Title"] = "Danh sách sản phẩm";
    Layout = "~/Views/Shared/MyLayoutHelper.cshtml";
}

<div class="d-flex align-items-center justify-content-between">
    <h1>Danh sách sản phẩm</h1>
    <a class="btn btn-primary" asp-action="Create">Tạo mới sản phẩm</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>STT</th>
            <th>Tên sản phẩm</th>
            <th>Tên viết tắt</th>
            <th>Mô tả đơn vị</th>
            <th>Đơn giá</th>
            <th>Hình ảnh</th>
            <th>Ngày sản xuất</th>
            <th>Giảm giá</th>
            <th>Số lần xem</th>
            <th>Loại sản phẩm</th>
            <th>Nhà cung cấp</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @{
            int index = 1; // Biến để đếm số thứ tự
        }

        @foreach (var item in Model)
        {
            <tr>
                <td>@index</td> <!-- Hiển thị số thứ tự -->
                <td>@Html.DisplayFor(modelItem => item.TenHh)</td>
                <td>@Html.DisplayFor(modelItem => item.TenAlias)</td>
                <td>@Html.DisplayFor(modelItem => item.MoTaDonVi)</td>
                <td>@Html.DisplayFor(modelItem => item.DonGia)</td>
                <td>@Html.DisplayFor(modelItem => item.Hinh)</td>
                <td>@Html.DisplayFor(modelItem => item.NgaySx)</td>
                <td>@Html.DisplayFor(modelItem => item.GiamGia)</td>
                <td>@Html.DisplayFor(modelItem => item.SoLanXem)</td>
                <td>@Html.DisplayFor(modelItem => item.MaLoaiNavigation.TenLoai)</td>
                <td>@Html.DisplayFor(modelItem => item.MaNccNavigation.TenCongTy)</td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.MaHh">
                        <i class="fas fa-edit"></i> Sửa
                    </a>
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.MaHh">
                        <i class="fas fa-info-circle"></i> Chi tiết
                    </a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.MaHh">
                        <i class="fas fa-trash-alt"></i> Xóa
                    </a>
                </td>
            </tr>
            index++;
        }
    </tbody>
</table>
