@model duanwebsite.Data.Loai

@{
    ViewData["Title"] = "Tạo mới loại sản phẩm";
    Layout = "~/Views/Shared/MyLayoutHelper.cshtml";
}

<h1 class="mb-4">Tạo mới loại sản phẩm</h1>

<div class="">
    <div class="row justify-content-center">
        <div class="col-12">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row gy-2">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="TenLoai" class="control-label"></label>
                            <input asp-for="TenLoai" class="form-control" />
                            <span asp-validation-for="TenLoai" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="TenLoaiAlias" class="control-label"></label>
                            <input asp-for="TenLoaiAlias" class="form-control" />
                            <span asp-validation-for="TenLoaiAlias" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="MoTa" class="control-label"></label>
                            <input asp-for="MoTa" class="form-control" />
                            <span asp-validation-for="MoTa" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Hinh" class="control-label"></label>
                            <input asp-for="Hinh" class="form-control" />
                            <span asp-validation-for="Hinh" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group mt-4">
                    <input type="submit" value="Tạo mới" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary ml-2">Quay lại danh sách</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <link href="~/css/admin.css" rel="stylesheet" />
    <script src="~/js/scripts.js"></script>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
