@model duanwebsite.Data.Loai

@{
    ViewData["Title"] = "Chi tiết loại sản phẩm";
    Layout = "~/Views/Shared/MyLayoutHelper.cshtml";
}
<h1>Chi tiết loại sản phẩm</h1>

<div>
    <h4>Thông tin loại sản phẩm</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Tên loại</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TenLoai)
        </dd>
        <dt class="col-sm-2">Tên Alias loại</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TenLoaiAlias)
        </dd>
        <dt class="col-sm-2">Mô tả</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MoTa)
        </dd>
        <dt class="col-sm-2">Hình ảnh</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Hinh)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" class="btn btn-primary" asp-route-id="@Model?.MaLoai">Chỉnh sửa</a> |
    <a asp-action="Index" class="btn btn-danger">Quay lại danh sách</a>
</div>
@section Styles {
    <link href="~/css/admin.css" rel="stylesheet" />
    <script src="~/js/scripts.js"></script>
}
