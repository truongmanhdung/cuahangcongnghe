@model IEnumerable<duanwebsite.Data.Loai>

@{
    ViewData["Title"] = "Danh sách loại sản phẩm";
    Layout = "~/Views/Shared/MyLayoutHelper.cshtml";
}

<div class="d-flex align-items-center justify-content-between">
    <h1>Danh sách loại sản phẩm</h1>
    <a class="btn btn-primary" asp-action="Create">Thêm mới loại</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>STT</th>
            <th>@Html.DisplayNameFor(model => model.TenLoai)</th>
            <th>@Html.DisplayNameFor(model => model.TenLoaiAlias)</th>
            <th>@Html.DisplayNameFor(model => model.MoTa)</th>
            <th>@Html.DisplayNameFor(model => model.Hinh)</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @{
            int index = 1; // Biến để đếm số thứ tự
        }

        @foreach (var item in Model)
        {
            <tr>
                <td>@index</td> <!-- Hiển thị số thứ tự -->
                <td>@Html.DisplayFor(modelItem => item.TenLoai)</td>
                <td>@Html.DisplayFor(modelItem => item.TenLoaiAlias)</td>
                <td>@Html.DisplayFor(modelItem => item.MoTa)</td>
                <td>@Html.DisplayFor(modelItem => item.Hinh)</td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.MaLoai">
                        <i class="fas fa-edit"></i> Sửa
                    </a>
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.MaLoai">
                        <i class="fas fa-info-circle"></i> Chi tiết
                    </a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.MaLoai">
                        <i class="fas fa-trash-alt"></i> Xóa
                    </a>
                </td>
            </tr>
            index++;
        }
    </tbody>
</table>
<div class="col-12">
    <div class="pagination d-flex justify-content-center mt-5">
        <a href="@Url.Action("Index", new { page = ViewBag.CurrentPage - 1 })" class="rounded @(ViewBag.CurrentPage == 1 ? "disabled" : "")">&laquo;</a>

        @for (int i = 1; i <= (int)ViewBag.TotalPages; i++)
        {
            if (i == 1 || i == (int)ViewBag.TotalPages || (i >= ViewBag.CurrentPage - 2 && i <= ViewBag.CurrentPage + 2))
            {
                <a href="@Url.Action("Index", new { page = i })" class="rounded @(ViewBag.CurrentPage == i ? "active" : "")">@i</a>
            }
            else if (i == 2 || i == (int)ViewBag.TotalPages - 1)
            {
                <span>...</span> <!-- Hiển thị dấu ba chấm -->
            }
        }

        <a href="@Url.Action("Index", new { page = ViewBag.CurrentPage + 1 })" class="rounded @(ViewBag.CurrentPage == (int)ViewBag.TotalPages ? "disabled" : "")">&raquo;</a>
    </div>
</div>