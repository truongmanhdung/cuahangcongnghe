@model IEnumerable<duanwebsite.Data.HoaDon>

@{
    ViewData["Title"] = "Danh sách hóa đơn";
    Layout = "~/Views/Shared/MyLayoutHelper.cshtml";
}

<div class="d-flex align-items-center justify-content-between">
    <h1>Danh sách hóa đơn</h1>
    <a class="btn btn-primary" asp-action="Create">Tạo mới hóa đơn</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>STT</th>
            <th>Ngày đặt</th>
            <th>Ngày cần</th>
            <th>Ngày giao</th>
            <th>Họ tên</th>
            <th>Địa chỉ</th>
            <th>Điện thoại</th>
            <th>Cách thanh toán</th>
            <th>Cách vận chuyển</th>
            <th>Phí vận chuyển</th>
            <th>Mã khách hàng</th>
            <th>Mã trạng thái</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @{
            int index = 1; // Biến để đếm số thứ tự
        }

        @foreach (var item in Model)
        {
            <tr>
                <td>@index</td> <!-- Hiển thị số thứ tự -->
                <td>@Html.DisplayFor(modelItem => item.NgayDat)</td>
                <td>@Html.DisplayFor(modelItem => item.NgayCan)</td>
                <td>@Html.DisplayFor(modelItem => item.NgayGiao)</td>
                <td>@Html.DisplayFor(modelItem => item.HoTen)</td>
                <td>@Html.DisplayFor(modelItem => item.DiaChi)</td>
                <td>@Html.DisplayFor(modelItem => item.DienThoai)</td>
                <td>@Html.DisplayFor(modelItem => item.CachThanhToan)</td>
                <td>@Html.DisplayFor(modelItem => item.CachVanChuyen)</td>
                <td>@Html.DisplayFor(modelItem => item.PhiVanChuyen)</td>
                <td>@Html.DisplayFor(modelItem => item.MaKhNavigation.HoTen)</td>
                <td>@Html.DisplayFor(modelItem => item.MaTrangThaiNavigation.TenTrangThai)</td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.MaHd">
                        <i class="fas fa-edit"></i> Sửa
                    </a>
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.MaHd">
                        <i class="fas fa-info-circle"></i> Chi tiết
                    </a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.MaHd">
                        <i class="fas fa-trash-alt"></i> Xóa
                    </a>
                </td>
            </tr>
            index++;
        }
    </tbody>
</table>
