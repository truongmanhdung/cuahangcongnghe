@model IEnumerable<duanwebsite.Data.KhachHang>

@{
    ViewData["Title"] = "Danh sách tài khoản";
    Layout = "~/Views/Shared/MyLayoutHelper.cshtml";
}

@{
    var index = 1; // Biến đếm để hiển thị số thứ tự
}
<table class="table table-striped">
    <thead>
        <tr>
            <th>STT</th>
            <th>Họ Tên</th>
            <th>Ngày Sinh</th>
            <th>Địa Chỉ</th>
            <th>Điện Thoại</th>
            <th>Email</th>
            <th>Hình</th>
            <th>Hiệu Lực</th>
            <th>Vai Trò</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@index</td>
                <td>@Html.DisplayFor(modelItem => item.HoTen)</td>
                <td>@Html.DisplayFor(modelItem => item.NgaySinh)</td>
                <td>@Html.DisplayFor(modelItem => item.DiaChi)</td>
                <td>@Html.DisplayFor(modelItem => item.DienThoai)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>@Html.DisplayFor(modelItem => item.Hinh)</td>
                <td>@Html.DisplayFor(modelItem => item.HieuLuc)</td>
                <td>
                    @if (item.VaiTro == 0)
                    {
                        <button class="btn btn-warning">Khách hàng</button>
                    }
                    else if (item.VaiTro == 1)
                    {
                        <button class="btn btn-success">Admin</button>
                    }
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.MaKh">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.MaKh">
                        <i class="fas fa-info-circle"></i> Details
                    </a>
                    @*  <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.MaKh">
                        <i class="fas fa-trash-alt"></i> Delete
                    </a> *@
                </td>
            </tr>
            index++;
        }
    </tbody>
</table>