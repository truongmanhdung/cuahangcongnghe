@model IEnumerable<duanwebsite.Data.KhachHang>

@{
    ViewData["Title"] = "Danh sách tài khoản";
    Layout = "~/Views/Shared/MyLayoutHelper.cshtml";
}

@{
    var index = 1; // Biến đếm để hiển thị số thứ tự
}
<table class="table table-striped">
    <thead>
        <tr>
            <th>STT</th>
            <th>Họ Tên</th>
            <th>Ngày Sinh</th>
            <th>Địa Chỉ</th>
            <th>Điện Thoại</th>
            <th>Email</th>
            <th>Hình</th>
            <th>Hiệu Lực</th>
            <th>Vai Trò</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@index</td>
                <td>@Html.DisplayFor(modelItem => item.HoTen)</td>
                <td>@Html.DisplayFor(modelItem => item.NgaySinh)</td>
                <td>@Html.DisplayFor(modelItem => item.DiaChi)</td>
                <td>@Html.DisplayFor(modelItem => item.DienThoai)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>@Html.DisplayFor(modelItem => item.Hinh)</td>
                <td>@Html.DisplayFor(modelItem => item.HieuLuc)</td>
                <td>
                    @if (item.VaiTro == 0)
                    {
                        <button class="btn btn-warning">Khách hàng</button>
                    }
                    else if (item.VaiTro == 1)
                    {
                        <button class="btn btn-success">Admin</button>
                    }
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.MaKh">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.MaKh">
                        <i class="fas fa-info-circle"></i> Details
                    </a>
                    @*  <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.MaKh">
                        <i class="fas fa-trash-alt"></i> Delete
                    </a> *@
                </td>
            </tr>
            index++;
        }
    </tbody>
</table>
<div class="col-12">
    <div class="pagination d-flex justify-content-center mt-5">
        <a href="@Url.Action("Index", new { page = ViewBag.CurrentPage - 1 })" class="rounded @(ViewBag.CurrentPage == 1 ? "disabled" : "")">&laquo;</a>

        @for (int i = 1; i <= (int)ViewBag.TotalPages; i++)
        {
            if (i == 1 || i == (int)ViewBag.TotalPages || (i >= ViewBag.CurrentPage - 2 && i <= ViewBag.CurrentPage + 2))
            {
                <a href="@Url.Action("Index", new { page = i })" class="rounded @(ViewBag.CurrentPage == i ? "active" : "")">@i</a>
            }
            else if (i == 2 || i == (int)ViewBag.TotalPages - 1)
            {
                <span>...</span> <!-- Hiển thị dấu ba chấm -->
            }
        }

        <a href="@Url.Action("Index", new { page = ViewBag.CurrentPage + 1 })" class="rounded @(ViewBag.CurrentPage == (int)ViewBag.TotalPages ? "disabled" : "")">&raquo;</a>
    </div>
</div>