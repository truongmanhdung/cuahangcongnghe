@model duanwebsite.Data.KhachHang

@{
    ViewData["Title"] = "Sửa tài khoản";
    Layout = "~/Views/Shared/MyLayoutHelper.cshtml";
}

<h1 class="mb-4">Sửa tài khoản</h1>

<div class="">
    <div class="row justify-content-center">
        <div class="col-12">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="MaKh" />
                <input type="hidden" asp-for="MatKhau" class="form-control" />
                <input type="hidden" asp-for="VaiTro" class="form-control" />
                <div class="row gy-2">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="HoTen" class="control-label mb-1"></label>
                            <input asp-for="HoTen" class="form-control" />
                            <span asp-validation-for="HoTen" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="NgaySinh" class="control-label mb-1"></label>
                            <input asp-for="NgaySinh" class="form-control" type="date" />
                            <span asp-validation-for="NgaySinh" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="DiaChi" class="control-label mb-1"></label>
                            <input asp-for="DiaChi" class="form-control" />
                            <span asp-validation-for="DiaChi" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="DienThoai" class="control-label mb-1"></label>
                            <input asp-for="DienThoai" class="form-control" />
                            <span asp-validation-for="DienThoai" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Email" class="control-label mb-1"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Hinh" class="control-label mb-1"></label>
                            <input asp-for="Hinh" class="form-control" />
                            <span asp-validation-for="Hinh" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="HieuLuc" /> @Html.DisplayNameFor(model => model.HieuLuc)
                            </label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="GioiTinh" /> @Html.DisplayNameFor(model => model.GioiTinh)
                            </label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="RandomKey" class="control-label mb-1"></label>
                            <input asp-for="RandomKey" class="form-control" />
                            <span asp-validation-for="RandomKey" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group mt-4">
                    <input type="submit" value="Lưu" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary ml-2">Quay lại danh sách</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <link href="~/css/admin.css" rel="stylesheet" />
    <script src="~/js/scripts.js"></script>
}
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
